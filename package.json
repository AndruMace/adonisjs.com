{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "node ace build --production",
    "start": "node server.js",
    "dev": "node ace serve --watch",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "front:build": "run-p front:build:js front:build:css front:build:static",
    "front:build:js": "esbuild resources/js/app.js --bundle --outfile=public/static/app.js",
    "front:build:css": "NODE_ENV=production postcss resources/css/app.css -o public/static/app.css",
    "front:build:static": "copyfiles -u 2 \"resources/static/**/*\" public/static"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^3.0.6",
    "@hotwired/turbo": "^7.0.0-beta.4",
    "@tailwindcss/typography": "^0.4.0",
    "adonis-preset-ts": "^1.1.0",
    "alpine-hotwire-turbo-adapter": "^0.1.1",
    "alpinejs": "^2.8.0",
    "autoprefixer": "^10.2.4",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.8.36",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-adonis": "^1.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^4.3.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.1.2",
    "youch": "^2.1.1",
    "youch-terminal": "^1.0.1"
  },
  "dependencies": {
    "@adonisjs/core": "^5.0.4-preview-rc-2.1",
    "@adonisjs/repl": "^1.1.6",
    "@adonisjs/view": "^3.1.0",
    "@dimerapp/content": "^1.3.0",
    "@stitches/core": "0.0.2",
    "hoverintent": "^2.2.1",
    "medium-zoom": "^1.0.6",
    "proxy-addr": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "tippy.js": "^6.2.7",
    "turbolinks-prefetch": "^1.0.3"
  },
  "description": "> Source code for the official website",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonisjs.com.git"
  },
  "keywords": [],
  "author": "",
